<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bordure -->
    <stroke
        android:width="2dp"
     android:color="@color/black" /> <!-- Couleur de la bordure -->

    <!-- Fond -->
    <solid android:color="@color/blue" /> <!-- Couleur de fond -->

    <!-- Coins arrondis -->
    <corners android:radius="8dp" /> <!-- Rayon des coins arrondis -->

    <!-- Ombre -->
    <padding android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
    <corners android:radius="8dp" />
    <gradient
        android:startColor="#40000000"
        android:centerColor="#20000000"
        android:endColor="#00000000"
        android:angle="90" /> <!-- Direction de l'ombre -->
</shape>
